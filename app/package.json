    "lint-staged": "^15.2.10",
    "postcss": "^8.4.44",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^7.1.7",
    "vitest": "^1.6.1"
